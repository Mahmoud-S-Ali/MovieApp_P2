<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_trailer_image"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/detail_medium_padding"
        android:layout_marginLeft="@dimen/detail_medium_padding"
        android:layout_marginRight="@dimen/detail_medium_padding"
        android:layout_marginTop="@dimen/detail_medium_padding"
        android:src="@drawable/youtube_icon"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/list_item_trailer_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/detail_medium_padding"
        android:layout_marginLeft="@dimen/detail_medium_padding"
        android:layout_marginRight="@dimen/detail_medium_padding"
        android:layout_marginTop="@dimen/detail_medium_padding"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/detail_small_textSize" />

</LinearLayout>