<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment"
    android:background="@color/moreDarkGray">

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ForecastListStyle"
        android:id="@+id/main_gridView"
        android:numColumns="auto_fit"
        android:gravity="center"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/detail_small_padding"
        android:horizontalSpacing="@dimen/detail_small_padding"
        />

    <TextView
        android:id="@+id/main_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/detail_medium_textSize"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/main_retry_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/main_empty_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Retry"
        android:gravity="center"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:onClick="startApp"
        android:visibility="invisible"/>
</RelativeLayout>